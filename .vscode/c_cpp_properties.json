{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**",
                "/opt/homebrew/include",
                "/opt/homebrew/include/opencv4",
                "/opt/homebrew/include/boost",
                "/opt/homebrew/opt/ffmpeg/include"
            ],
